@model MiFragancia.Models.Imagens

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Imagens</h4>
<hr />
@using (Html.BeginForm("Add", "Imagens", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <label asp-for="ImagePath" class="control-label"></label>
            <input type="file" name="ImageFile" required />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
            <input type="submit" value="Add" asp-action="Add" class="btn btn-default" />
        </form>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" value="@Log.imagen" readonly/>
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">

            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

