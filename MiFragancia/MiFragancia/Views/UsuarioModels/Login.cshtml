
@{
    ViewData["Title"] = "Login";

    ViewData["alert"] = "Ingrese sus credenciales";


}



<body>
    <div id="login">

       
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="Login" method="POST" asp-action="Login">

                            <h3 class="text-center text-info">Login</h3>
                            <label class="text-center text-info">@ViewData["alert"]</label>
                            <div class="form-group">
                                <label for="username" class="text-info">Username:</label><br>
                                <input type="text" name="email" id="inputEmail" placeholder="Email" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input name="pass" type="password" id="inputPassword" placeholder="Contraseña" class="form-control">
                            </div>
                            <div class="form-group">

                                <input type="submit" name="submit" asp-controller="UsuarioModels" asp-action="Login" class="btn btn-info btn-md" value="submit"><br />
                                <a asp-controller="UsuarioModels" asp-action="Create" class="text-info">Registrarse</a>
                            </div>
                            <div id="register-link" class="text-right">
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>